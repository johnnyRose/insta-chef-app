<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#ff607d8b">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="List Recipes"
        android:id="@+id/list_recipes_button"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#ff455a64"
        android:textColor="#ff212121"
        android:height="100dp"
        android:layout_margin="15dp"
        android:textStyle="bold"
        android:textSize="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create New Recipe"
        android:id="@+id/create_new_recipe_button"
        android:layout_below="@+id/list_recipes_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#ff455a64"
        android:textColor="#ff212121"
        android:height="100dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_alignRight="@+id/list_recipes_button"
        android:layout_alignEnd="@+id/list_recipes_button"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/import_export_button"
        android:layout_below="@+id/create_new_recipe_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Import / Export Recipes"
        android:background="#ff455a64"
        android:textColor="#ff212121"
        android:height="100dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_alignRight="@+id/create_new_recipe_button"
        android:layout_alignEnd="@+id/create_new_recipe_button"
        android:textStyle="bold"
        android:textSize="20dp" />
</RelativeLayout>
